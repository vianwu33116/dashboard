<body class="d-flex">
  <div
    class="modal fade"
    id="newModal"
    tabindex="-1"
    aria-labelledby="newModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header mb-8">
          <h2 class="modal-title fw-bold edit-modal-title" id="newModalLabel">
            New Admin
          </h2>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form action="" class="form">
            <div class="wrap border-bottom mb-6">
              <h3 class="thr-title fw-bold mb-4">Account</h3>
              <label for="name" class="mb-1 font-sz14">Name</label>
              <input
                type="text"
                id="name"
                class="d-block mb-4 p-4 border txt-input"
              />
              <label for="email" class="mb-1 font-sz14">Email</label>
              <input
                type="email"
                id="email"
                class="d-block mb-6 p-4 border txt-input"
              />
            </div>
            <div class="wrap border-bottom mb-6">
              <h3 class="thr-title fw-bold mb-4 verification">Verification</h3>
              <div class="verified-wrap d-flex justify-content-between mb-4">
                <p class="confirm fw-bold">
                  <span class="material-icons mr-2 text-danger">
                    warning </span
                  >Unverified
                </p>
              </div>
              <div id="send-mail" class="border p-4 mb-6 text-center text-success fw-bold link">
                Send Verification mail
              </div>
              <div id="sent" class="sent border p-4 mb-6 text-center text-success fw-bold text-black-50 bg-main">
                Please check mail to verify
              </div>
            </div>
            <div class="wrap border-bottom mb-6">
              <h3 class="thr-title fw-bold mb-4">Access Level</h3>
              <div
                class="select d-flex justify-content-between mb-6 p-4 border border-dark"
              >
                <p class="option txt-light-font">-Choose access level-</p>
                <div class="icon-wrap">
                  <span class="material-icons"> expand_more </span>
                </div>
              </div>
            </div>
            <div class="wrap mb-6">
              <h3 class="thr-title fw-bold mb-4">Custom Access</h3>
              <input
                type="checkbox"
                name="access"
                value="lecture"
                class="d-lock mb-4 mr-2"
              />
              Lecture <br />
              <input
                type="checkbox"
                name="access"
                value="coupon"
                class="d-lock mb-4 mr-2"
              />
              Coupon <br />
              <input
                type="checkbox"
                name="access"
                value="message"
                class="d-lock mb-4 mr-2"
              />
              Message <br />
              <input
                type="checkbox"
                name="access"
                value="setting"
                class="d-lock mb-4 mr-2"
              />
              Setting <br />
              <input
                type="checkbox"
                name="access"
                value="task-menu"
                class="d-lock mb-4 mr-2"
              />
              Task-Menu <br />
            </div>
          </form>
        </div>
        <div class="modal-footer border-0">
          <button
            type="button"
            class="btn btn-secondary bg-white border-success text-success fw-bold"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="button" class="btn btn-success fw-bold">Add</button>
        </div>
      </div>
    </div>
  </div>
</body>
